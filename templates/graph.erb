title       '<%= @data['title'] %>'
vtitle      '<%= @data['vtitle'] %>'
description '<%= @data['description'] %>'
area       :<%= @data['area'] %>
hide_legend <%= @data['hide_legend'] %>

<% if @data['ymin'] && @data['ymin'].is_a?(Fixnum) -%>
ymin <%= @data['ymin'] %>
<% end -%>
<% if @data['ymax'] && @data['ymax'].is_a?(Fixnum) -%>
ymax <%= @data['ymax'] %>
<% end -%>


<% @fields.sort.each do |name,f| -%>
field :<%= name %>,
<% if f['scale'] && f['scale'].to_f != 0.0 %>
  :scale => <%= f['scale'].to_f %>,
<% end -%>
<% if f['color'] != 'undef' -%>
  :color => '<%= f['color'] %>',
<% end -%>
  :alias => '<%= f['alias'] %>',
  :data  => "<%= f['data'] %>";

<% end -%>
