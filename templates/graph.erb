<% @data.sort.each do |key,value| -%>
<% if key == 'area' %>area :<%= value %>
<% next %><% elsif key == 'title' %>title "<%= value %>"
<% next %><% elsif value && value.to_s != 'undef' %><%= key %>  <%= value %>
<% end %><% end %>

<% @fields.sort.each do |name,f| -%>
field :<%= name %>,
<% if f['scale'] && f['scale'].to_f != 0.0 %>
  :scale => <%= f['scale'].to_f %>,
<% end -%>
<% if f['color'] != 'undef' -%>
  :color => '<%= f['color'] %>',
<% end -%>
  :alias => '<%= f['alias'] %>',
  :data  => "<%= f['data'] %>";

<% end -%>
