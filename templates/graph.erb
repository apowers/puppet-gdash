title       '<%= @data['title'] %>'
vtitle      '<%= @data['vtitle'] %>'
description '<%= @data['description'] %>'

area       :<%= @data['area'] %>

<% if @data['ymin'] -%>
ymin <%= @data['ymin'] %>
<% end -%>
<% if @data['ymax'] -%>
ymax <%= @data['ymax'] %>
<% end -%>


<% @fields.sort.each do |name,f| -%>
field :<%= name %>,
  :scale => <%= f['scale'].to_f %>,
<% if f['color'] != 'undef' -%>
  :color => '<%= f['color'] %>',
<% end -%>
  :alias => '<%= f['alias'] %>',
  :data  => "<%= f['data'] %>";

<% end -%>
